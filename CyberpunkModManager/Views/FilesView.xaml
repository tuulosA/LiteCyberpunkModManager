<UserControl x:Class="CyberpunkModManager.Views.FilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:CyberpunkModManager.ViewModels">
    <Grid>
        <DataGrid ItemsSource="{Binding DownloadedFiles}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mod Name" Binding="{Binding ModName}" Width="*"/>
                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="2*"/>
                <DataGridTextColumn Header="Size" Binding="{Binding FileSizeDisplay}" Width="*" />
                <DataGridTextColumn Header="Uploaded by Author" Binding="{Binding UploadedTimestamp}" Width="*" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
