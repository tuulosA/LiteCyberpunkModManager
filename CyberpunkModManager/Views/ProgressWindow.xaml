<Window x:Class="CyberpunkModManager.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Installing Mods..." Height="120" Width="320"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="StatusText" Text="Installing mods..." Margin="0,0,0,10"/>
        <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100"/>
    </StackPanel>
</Window>
