<UserControl x:Class="CyberpunkModManager.Views.ModListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Fetch Tracked Mods"
                Width="150"
                Height="30"
                Click="FetchMods_Click"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>

        <Button Content="Download Files"
                Width="150"
                Height="30"
                Click="DownloadFiles_Click"
                HorizontalAlignment="Left"
                Margin="160,0,0,10"/>

        <ListView Grid.Row="1"
                  Name="ModsListView"
                  ItemsSource="{Binding ModsGrouped}"
                  Margin="0,5,0,5">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,10,0,5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mod Name" Width="300" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Status" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}"
                                           Padding="4"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Update Available!">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Latest Downloaded">
                                                    <Setter Property="Foreground" Value="#1E3A8A"/>
                                                    <!-- Deep blue -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Downloaded">
                                                    <Setter Property="Foreground" Value="#1E3A8A"/>
                                                    <!-- Deep blue -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Not Downloaded">
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,5,0,0"
                   FontStyle="Italic"
                   Foreground="Gray"/>
    </Grid>
</UserControl>
