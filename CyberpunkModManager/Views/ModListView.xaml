<UserControl x:Class="CyberpunkModManager.Views.ModListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:CyberpunkModManager.Views"
             mc:Ignorable="d">

    <UserControl.Resources>
        <views:ModNameColumnWidthConverter x:Key="ModNameColumnWidthConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Button bar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Fetch Tracked Mods"
                    Width="150"
                    Height="30"
                    Click="FetchMods_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Download Files"
                    Width="150"
                    Height="30"
                    Click="DownloadFiles_Click"
                    Margin="0,0,10,0"/>
            <Button Content="Manage Files"
                    Width="150"
                    Height="30"
                    Click="ManageFiles_Click"/>
        </StackPanel>

        <!-- Mod list -->
        <ListView Grid.Row="1"
                  Name="ModsListView"
                  ItemsSource="{Binding ModsGrouped}"
                  Margin="0,5,0,5">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,10,0,5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.View>
                <GridView>
                    <!-- Mod Name Column -->
                    <GridViewColumn Header="Mod Name">
                        <GridViewColumn.Width>
                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=ListView}"
                                     Path="ActualWidth"
                                     Converter="{StaticResource ModNameColumnWidthConverter}" />
                        </GridViewColumn.Width>
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Name" />
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>

                    <!-- Status Column -->
                    <GridViewColumn Header="Status" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Status}"
                                           Padding="4"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Left">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Update Available!">
                                                    <Setter Property="Foreground" Value="{DynamicResource UpdateAvailableStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Downloaded">
                                                    <Setter Property="Foreground" Value="{DynamicResource DownloadedStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Latest Downloaded">
                                                    <Setter Property="Foreground" Value="{DynamicResource LatestDownloadedStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Not Installed">
                                                    <Setter Property="Foreground" Value="{DynamicResource NotDownloadedStatusBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <!-- Files Downloaded Column -->
                    <GridViewColumn Header="Files Downloaded" Width="140"
                                    DisplayMemberBinding="{Binding DownloadedFileCount}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Status Message -->
        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Margin="0,5,0,0"
                   FontStyle="Italic"
                   Foreground="Gray"/>
    </Grid>
</UserControl>
