<Window x:Class="CyberpunkModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CyberpunkModManager.Views"
        Title="Cyberpunk Mod Manager" Height="650" Width="1100">
    <Grid>
        <TabControl>
            <TabItem Header="Mods">
                <ContentControl x:Name="ModsTabContent" />
            </TabItem>

            <TabItem Header="Files">
                <ContentControl x:Name="FilesTabContent" />
            </TabItem>

            <TabItem Header="Settings">
                <ContentControl x:Name="SettingsTabContent" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
