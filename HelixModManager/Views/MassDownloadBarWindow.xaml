<Window x:Class="HelixModManager.Views.MassDownloadBarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mass Download Progress"
        Height="210"
        Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">

    <StackPanel Margin="10,0,20,0" VerticalAlignment="Center">

        <TextBlock x:Name="ModNameText"
                   Text="Mod: -"
                   FontSize="14"
                   Margin="0,0,0,5"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource TextBrush}" />

        <TextBlock x:Name="FileNameText"
                   Text="File: -"
                   FontSize="13"
                   Margin="0,0,0,5"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Foreground="{DynamicResource TextBrush}" />

        <TextBlock x:Name="FileCounterText"
                   Text="File 0 of 0"
                   FontSize="12"
                   Margin="0,0,0,5"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}" />

        <TextBlock x:Name="StatusText"
                   Text="Downloading..."
                   FontSize="12"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource TextBrush}" />

        <!-- Individual File Progress -->
        <ProgressBar x:Name="FileProgressBar"
                     Height="16"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     Margin="0,0,0,5"
                     IsIndeterminate="False"
                     Foreground="{DynamicResource HighlightBrush}"
                     Background="{DynamicResource ControlBorderBrush}" />

        <!-- Overall Progress -->
        <ProgressBar x:Name="ProgressBarControl"
                     Height="25"
                     Minimum="0"
                     Maximum="100"
                     Value="0"
                     IsIndeterminate="False"
                     Foreground="{DynamicResource HighlightBrush}"
                     Background="{DynamicResource ControlBorderBrush}" />
    </StackPanel>
</Window>

