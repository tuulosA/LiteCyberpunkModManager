<UserControl x:Class="HelixModManager.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:HelixModManager.Models"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text="Settings"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock Text="Configure paths, Nexus API and game context."
                       Margin="0,2,0,0"
                       Foreground="{DynamicResource DisabledTextBrush}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,4,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- General settings card -->
            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    Padding="16"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="General"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <!-- Output directory -->
                    <StackPanel Margin="0,4,0,4">
                        <TextBlock Text="Output Directory"
                                   Margin="0,0,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding OutputDir, Mode=TwoWay}"
                                     VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Width="32" Height="28"
                                    Margin="6,0,0,0"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xE71E;"
                                    Click="OpenOutputDir_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Game installation directory -->
                    <StackPanel Margin="0,4,0,4">
                        <TextBlock Text="Game Installation Directory"
                                   Margin="0,8,0,2"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding GameInstallationDir, Mode=TwoWay}"
                                     VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Width="32" Height="28"
                                    Margin="6,0,0,0"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xE71E;"
                                    Click="OpenGameDir_Click"/>
                        </Grid>
                    </StackPanel>

                    <!-- Nexus API key -->
                    <StackPanel Margin="0,8,0,4">
                        <TextBlock Text="Nexus Mods API Key"
                                   Margin="0,8,0,2"/>
                        <PasswordBox x:Name="ApiKeyBox"
                                     HorizontalAlignment="Stretch"
                                     PasswordChanged="ApiKeyBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Theme + Game selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                        <StackPanel Width="200" Margin="0,0,12,0">
                            <TextBlock Text="Theme" Margin="0,0,0,2"/>
                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1">
                                <ComboBox Margin="2,1,2,1"
                                          Background="{DynamicResource ControlBackgroundBrush}"
                                          SelectedItem="{Binding AppTheme, Mode=TwoWay}"
                                          ItemsSource="{x:Static local:AppThemeValues.All}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Width="200">
                            <TextBlock Text="Game" Margin="0,0,0,2"/>
                            <Border BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1">
                                <ComboBox Margin="2,1,2,1"
                                          Background="{DynamicResource ControlBackgroundBrush}"
                                          SelectedItem="{Binding SelectedGame, Mode=TwoWay}"
                                          ItemsSource="{x:Static local:GameIdValues.All}"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Save button -->
                    <Button Content="Save Settings"
                            Width="140"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Left"
                            Click="SaveSettings_Click"/>
                </StackPanel>
            </Border>

            <!-- Modlist tools card -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{DynamicResource ControlBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="1"
                    Padding="16"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Tracked Mods"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <TextBlock Text="Import and export modlists, or clear tracked mods for the active game."
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"
                               Foreground="{DynamicResource DisabledTextBrush}"/>

                    <Button Content="Export Modlist"
                            Margin="0,4,0,4"
                            Width="160"
                            Click="ExportModlist_Click"/>

                    <Button Content="Import Modlist"
                            Margin="0,4,0,4"
                            Width="160"
                            Click="ImportModlist_Click"/>

                    <Button Content="Clear Tracked Mods"
                            Margin="0,12,0,0"
                            Width="180"
                            Click="ClearTrackedMods_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>

