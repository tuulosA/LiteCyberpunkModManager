<UserControl x:Class="LiteCyberpunkModManager.Views.FilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LiteCyberpunkModManager.ViewModels"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase">

    <!-- Group the files by Category -->
    <UserControl.Resources>
        <CollectionViewSource x:Key="FilesGrouped"
                              Source="{Binding FilteredDownloadedFiles}">
            <CollectionViewSource.SortDescriptions>
                <!-- Sort groups by Category name -->
                <scm:SortDescription PropertyName="Category" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10" Width="300" Height="28" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBox x:Name="SearchBox"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Padding="26,0,4,0"
                     ToolTip="Filter by mod name or file name"
                     VerticalContentAlignment="Center"/>
            <TextBlock FontFamily="Segoe MDL2 Assets"
                       Text="&#xE71E;"
                       FontSize="14"
                       Foreground="Gray"
                       VerticalAlignment="Center"
                       Margin="6,0,0,0"
                       IsHitTestVisible="False"/>
        </Grid>

        <DataGrid Name="DownloadedFilesGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding Source={StaticResource FilesGrouped}}"
                  AutoGenerateColumns="False"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  Margin="10"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  BorderThickness="0">
            <DataGrid.ColumnWidth>*</DataGrid.ColumnWidth>

            <!-- Group header look -->
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <Expander IsExpanded="True"
                                                  BorderThickness="0"
                                                  Margin="0,10,0,0">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal" Margin="2,0,0,0">
                                                    <TextBlock Text="{Binding Name}"
                                                               FontWeight="Bold"
                                                               FontSize="14" />
                                                    <TextBlock Text="  ("/>
                                                    <TextBlock Text="{Binding ItemCount}"/>
                                                    <TextBlock Text=")"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter/>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </DataGrid.GroupStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mod Name" Binding="{Binding ModName}" Width="3*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <EventSetter Event="MouseLeftButtonDown" Handler="ModName_DoubleClick" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Size" SortMemberPath="FileSizeMB" Width="1*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FileSizeDisplay}"
                                       TextTrimming="CharacterEllipsis"
                                       Padding="2,0"
                                       VerticalAlignment="Center" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Uploaded by Auth"
                                    Binding="{Binding UploadedTimestamp}"
                                    Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="1.5*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="Padding" Value="2,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Bottom bar: left = total count, right = action buttons -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Bottom-left: total files (filtered) -->
            <TextBlock Grid.Column="0"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="0,0,10,0"
               FontStyle="Italic"
               Foreground="Gray"
               Text="{Binding FilteredDownloadedFiles.Count, StringFormat={}{0} files}" />

            <!-- Bottom-right: buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Install Selected" Width="140" Margin="5" Click="InstallSelected_Click"/>
                <Button Content="Uninstall Selected" Width="140" Margin="5" Click="UninstallSelected_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
