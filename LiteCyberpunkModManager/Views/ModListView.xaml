<UserControl x:Class="LiteCyberpunkModManager.Views.ModListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:LiteCyberpunkModManager.Views"
             mc:Ignorable="d">

    <UserControl.Resources>
        <views:ColumnWidthConverter x:Key="ColumnWidthConverter" />
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ScrollViewer Grid.Column="0"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Auto">
                <WrapPanel VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           ItemHeight="35"
                           ItemWidth="Auto">

                    <Button Content="Fetch Tracked Mods"
                            Width="120"
                            Margin="0,0,8,4"
                            Click="FetchMods_Click"/>

                    <Button Content="Download Files"
                            Width="120"
                            Margin="0,0,8,4"
                            Click="DownloadFiles_Click"/>

                    <Button Content="Manage Files"
                            Width="120"
                            Margin="0,0,8,4"
                            Click="ManageFiles_Click"/>

                    <Button Content="Import List and Download"
                            Width="150"
                            Margin="0,0,8,4"
                            Click="ImportAndDownloadAll_Click"
                            ToolTip="Import your modlist and batch download all files (Premium only)"/>

                    <Grid Width="180" Height="30" Margin="0,0,8,4">
                        <TextBox
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            VerticalContentAlignment="Center"
                            Padding="26,0,4,0"
                            ToolTip="Search mods..." />
                        <TextBlock
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE71E;"
                            FontSize="14"
                            Foreground="Gray"
                            VerticalAlignment="Center"
                            Margin="6,0,0,0"
                            IsHitTestVisible="False"/>
                    </Grid>

                    <ComboBox Width="150" Height="30"
                              ItemsSource="{Binding AvailableCategories}"
                              SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                              Margin="0,0,8,4"
                              ToolTip="Filter by category"/>
                </WrapPanel>
            </ScrollViewer>

            <Button Content="Tracking Centre"
                    Width="100"
                    Height="30"
                    Grid.Column="1"
                    Click="OpenTrackingCentre_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"/>
        </Grid>

        <ListView Grid.Row="1"
                  Name="ModsListView"
                  SelectionMode="Extended"
                  ItemsSource="{Binding ModsGrouped}"
                  Margin="0,5,0,5"
                  MouseDoubleClick="ModsListView_MouseDoubleClick"
                  PreviewMouseLeftButtonDown="ModsListView_PreviewMouseLeftButtonDown">

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Margin="5,10,0,5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mod Name">
                        <GridViewColumn.Width>
                            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType=ListView}"
                                     Path="ActualWidth"
                                     Converter="{StaticResource ColumnWidthConverter}" />
                        </GridViewColumn.Width>
                        <GridViewColumn.DisplayMemberBinding>
                            <Binding Path="Name" />
                        </GridViewColumn.DisplayMemberBinding>
                    </GridViewColumn>

                    <GridViewColumn Header="Status" Width="180">
                        <!-- HEADER: clickable, opens a context menu with status options -->
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <Border Padding="0"
                  Background="Transparent"
                  MouseLeftButtonDown="StatusHeader_MouseLeftButtonDown">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0">
                                        <TextBlock Text="Status" FontWeight="Bold" />
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
               Text="&#xE16E;"
               FontSize="14"
               Margin="4,0,0,0"
               Foreground="Gray"
               VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <!-- Context menu appears when clicking the header -->
                                        <Border.ContextMenu>
                                            <ContextMenu StaysOpen="False"
                           Opened="StatusHeader_ContextMenu_Opened">
                                                <MenuItem Header="All statuses" Click="StatusHeaderMenu_Click"/>
                                                <Separator/>
                                                <MenuItem Header="Latest Downloaded" Click="StatusHeaderMenu_Click"/>
                                                <MenuItem Header="Downloaded" Click="StatusHeaderMenu_Click"/>
                                                <MenuItem Header="Not Downloaded" Click="StatusHeaderMenu_Click"/>
                                                <MenuItem Header="Update Available!" Click="StatusHeaderMenu_Click"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>

                            <!-- your existing CellTemplate for status -->
                            <GridViewColumn.CellTemplate>
                                <!-- unchanged -->
                                <DataTemplate>
                                    <TextBlock Text="{Binding Status}"
                     Padding="4"
                     FontWeight="SemiBold"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Update Available!">
                                                    <Setter Property="Foreground" Value="{DynamicResource UpdateAvailableStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Downloaded">
                                                    <Setter Property="Foreground" Value="{DynamicResource DownloadedStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Latest Downloaded">
                                                    <Setter Property="Foreground" Value="{DynamicResource LatestDownloadedStatusBrush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Not Downloaded">
                                                    <Setter Property="Foreground" Value="{DynamicResource NotDownloadedStatusBrush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn Header="Files Downloaded" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DownloadedFileCount}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left: existing status message (this already shows total) -->
            <TextBlock Grid.Column="0"
               Margin="0,0,10,0"
               VerticalAlignment="Center"
               FontStyle="Italic"
               Foreground="Gray"
               Text="{Binding StatusMessage}" />

            <!-- Right: counts without total -->
            <TextBlock Grid.Column="1"
               VerticalAlignment="Center"
               FontStyle="Italic"
               Foreground="Gray"
               Text="{Binding SummaryText}" />
        </Grid>


    </Grid>
</UserControl>
