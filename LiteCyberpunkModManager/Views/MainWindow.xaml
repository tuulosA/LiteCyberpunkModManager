<Window x:Class="LiteCyberpunkModManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lite CPMM"
        Height="650" Width="1100">
    <Grid>
        <TabControl>
            <TabItem Header="Mods">
                <ContentControl x:Name="ModsTabContent" />
            </TabItem>
            <TabItem Header="Files">
                <ContentControl x:Name="FilesTabContent" />
            </TabItem>
            <TabItem Header="Settings">
                <ContentControl x:Name="SettingsTabContent" />
            </TabItem>
        </TabControl>

        <!-- Active game indicator overlaid on the tab header bar -->
        <Border HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,4,12,0"
                Background="Transparent">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Game: "
                           Margin="0,0,4,0"
                           Foreground="{DynamicResource StatusTextBrush}" />
                <TextBlock x:Name="ActiveGameLabel"
                           Foreground="{DynamicResource StatusTextBrush}"
                           FontWeight="SemiBold" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
