<UserControl x:Class="LiteCyberpunkModManager.Views.Bg3LoadOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
            <TextBlock Text="BG3 Load Order"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"/>
            <TextBlock x:Name="HintText"
                       Text="Load order editing is available only when Baldur's Gate 3 is the active game."
                       Foreground="{DynamicResource DisabledTextBrush}"
                       Margin="0,2,0,0"/>
        </StackPanel>

        <DataGrid x:Name="ModulesGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0"
                  ItemsSource="{Binding}"
                  Background="{DynamicResource ControlBackgroundBrush}"
                  Foreground="{DynamicResource TextBrush}"
                  BorderBrush="{DynamicResource ControlBorderBrush}"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Width="40" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}"/>
                <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Folder" Width="2*" Binding="{Binding Folder}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Move Up" Width="80" Margin="0,0,8,0" Click="MoveUp_Click"/>
            <Button Content="Move Down" Width="80" Margin="0,0,8,0" Click="MoveDown_Click"/>
            <Button Content="Reload" Width="80" Margin="0,0,8,0" Click="Reload_Click"/>
            <Button Content="Save Order" Width="100" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
